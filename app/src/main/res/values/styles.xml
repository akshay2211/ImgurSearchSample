<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/headingColor</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/headingColor</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <!--&lt;!&ndash; enable window content transitions &ndash;&gt;
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>

        &lt;!&ndash; specify enter and exit transitions &ndash;&gt;
        <item name="android:windowEnterTransition" tools:targetApi="lollipop">@transition/explode</item>
        <item name="android:windowExitTransition" tools:targetApi="lollipop">@transition/explode</item>

        &lt;!&ndash; specify shared element transitions &ndash;&gt;
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">
            @transition/change_image_transform</item>-->

    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.App.Headline6</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/headingColor</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="editTextBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:queryBackground" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="fontFamily">@font/quicksand_regular</item>
        <item name="iconTint">@color/darkGrey</item>
        <item name="android:background">@drawable/search_background</item>
    </style>


</resources>